{
    "plugins": [
        [
            "babel-plugin-module-resolver",
            {
                "root": ["node_modules", "./"],
                "alias": {
                    "^@ymc/(.+)$": "./packages/\\1",
                    "^@private-pkgs/(.+)$": "./private-pkgs/\\1"
                },
                "transformFunctions": [
                    "require",
                    "require.resolve",
                    "System.import",
                    "jest.genMockFromModule",
                    "jest.mock",
                    "jest.unmock",
                    "jest.doMock",
                    "jest.dontMock"
                ]
            }
        ],
        ["babel-plugin-transform-import-meta"]
    ],
    "presets": [
        [
            "@babel/preset-env",
            {
                "targets": {
                    "node": "current"
                }
            }
        ]
    ]
}
