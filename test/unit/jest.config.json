{
    "rootDir": "../../",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "vue"],
    "moduleNameMapper": {
        "^@ymc/(.*?.?(js|vue)?|)$": "<rootDir>/packages/$1",
        "^@provate-pkgs/(.*?.?(js|vue)?|)$": "<rootDir>/private-pkgs/$1",
        "^@script-pkgs/(.*?.?(js|vue)?|)$": "<rootDir>/scr/lib/$1"
    },
    "transform": {
        "^.+\\.js$": "<rootDir>/node_modules/babel-jest"
    },
    "snapshotSerializers": [],
    "testMatch": [
        "<rootDir>/scr/**/*.spec.js",
        "<rootDir>/private-pkgs/**/*.spec.js",
        "<rootDir>/packages/**/*.spec.js",
        "<rootDir>/test/unit/**/*.spec.js"
    ],
    "testPathIgnorePatterns": [],
    "coverageDirectory": "<rootDir>/test/unit/coverage",
    "collectCoverageFrom": ["src/components/*.(vue)", "!src/main.js", "!**/node_modules/**"]
}
