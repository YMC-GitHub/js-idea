{
  "rootDir": "../../",
  "moduleFileExtensions": [
    "js"
  ],
  "moduleNameMapper": {
    "^@/(.*?.?(js|vue)?|)$": "<rootDir>/packages/$1"
  },
  "transform": {
    "^.+\\.js$": "<rootDir>/node_modules/babel-jest"
  },
  "snapshotSerializers": [],
  "testMatch": [
    "<rootDir>/test/unit/**/*.spec.js",
    "<rootDir>/packages/**/*.spec.js"
  ],
  "testPathIgnorePatterns": [],
  "coverageDirectory": "<rootDir>/test/unit/coverage",
  "collectCoverageFrom": [
    "src/components/*.(vue)",
    "!src/main.js",
    "!**/node_modules/**"
  ]
}